/* pages/mine/mine/index.wxss *//* pages/deploy/deploy.wxss */
.userInfo_content{
    display: flex;
    border-radius: 0 0 30px 30px;
    background-color: rgb(12, 113, 201);
    height: 30vh;
    text-align: center;
    justify-content: center;
    padding-bottom: 60px;
    color: #fff;
  }
  
  .avarar_img{
    flex: 1;
  }
  
  .img_avatar{
    margin-top: 20px;
    margin-left: 50%;
    position:relative;
    left: -12.5vw;
    width: 25vw;
    height: 25vw;
    border-radius: 50%;
    overflow: hidden;
    border: 4px solid #fff;
    box-shadow: 0 0 8px rgb(61, 61, 61);
  }
  
  .username{
    flex: 5;
    height: 100rpx;
    line-height: 100rpx;
    margin-left:20rpx;
  }
  
  .infoContainer{
    margin: 0 20px;
    border-radius: 20px;
    box-shadow: 0 0 8px rgb(177, 177, 177);
    position: relative;
    top: -30px;
    background-color: #fff;
  }
  
  .view-item {
    /* margin-top: 20px; */
    /* box-shadow: 0 1px 2px 0 rgba(0,0,0,.05); */
    /* border: 1px solid #eee; */
    display: flex;
    padding: 30rpx 20rpx;
  }
  
  .view-item image{
    align-self: center;
    width: 40rpx;
    height: 40rpx;
    margin-right: 30rpx;
    margin-left: 30rpx;
  }
  
  .view-item text{
    flex: 1;
    font-size: 28rpx;
    color: rgb(99,99,99);
  
  }
  
  button {
    background-color: #e4e4e4;
    font-size: 28rpx;
    margin: 60rpx;
  }
  
  .view-item  .view_item_enter{
    width: 20rpx;
    height: 30rpx;
  }
  
  