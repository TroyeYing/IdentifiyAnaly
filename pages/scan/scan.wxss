
/**scan.wxss**/
.scan-view {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;  
    position: fixed;
    align-items: center;
    justify-content: space-around;
  }
   
  .scan-border {
    /* width: 94%;
    height: 94%; */
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
   
  .scan-camera {
    /* width: 500rpx;
    height: 500rpx; */
    width: 100%;
    height: 100%;
    border-radius: 6rpx;
    /* margin: 30rpx; */
  }
   
  .cover-corner {
    width: 80rpx;
    height: 80rpx;
    position: absolute;
  }
   
  .cover-left-top {
    left: 125rpx;
    top: 250rpx;
  }
   
  .cover-right-top {
    right: 125rpx;
    top: 250rpx;
  }
   
  .cover-left-bottom {
    left: 125rpx;
    top: 625rpx;
  }
   
  .cover-right-bottom {
    right: 125rpx;
    top: 625rpx;
  }
   
  .scan-animation {
    position: absolute;
    top: 240rpx;
    left: 135rpx;
    width: 480rpx;
    height: 8rpx;
    /* background-color: #08FDFE; */
    background-color: #4a86e8;
    border-radius: 50%;
  }  